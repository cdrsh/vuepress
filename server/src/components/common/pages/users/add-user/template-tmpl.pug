            | {{$t('Priv_Blocked')}}

    //Manage buttons
    md-layout(md-flex="100", md-align="end")
    
        //Cancel
        md-button.md-raised(@click="closeFn")
            | {{$t('Cancel')}}
        
        //Add
        md-button.md-raised.md-primary(@click="addUserFn")
            | {{$t('Add')}}
