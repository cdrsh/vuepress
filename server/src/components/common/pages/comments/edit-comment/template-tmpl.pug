md-layout(md-flex="100")
    //Title dialog
    md-layout.brdb(md-flex="100")
        md-layout(md-flex="50", md-align="start")
            h2 {{$t('Edit_comment')}}
        
        //Close button
        md-layout(md-flex="50", md-align="end")
            md-button.md-icon-button.md-raised(
                :title="$t('Back_to_comments')", 
                @click="closeEditDlg"
            )
                md-icon close

    //Comment text
    md-layout(md-flex="100", md-align="start")
        md-input-container
            label
                | {{$t('Comment')}}
            md-textarea(
                cols="30", 
                rows="5",
                v-model="editCommentObj.txt"
                :placeholder="$t('Comment')",
            )

    //Author
    md-layout(md-flex="100", md-align="start")
        label 
            | {{$t('User')}}:
            | {{editCommentObj.uname}}&nbsp;
            | {{editCommentObj.isBlocked?'('+$t('blocked')+')':''}}

    //Date
    md-layout(md-flex="100", md-align="start")
        label {{$t('Publish_date')}}: {{editCommentObj.dt}}

    //Manage buttons
    md-layout(md-flex="100", md-align="end")

        //Block author
        md-button.md-raised.md-primary(
            @click="blockUserComment"
        )
            md-icon block
            | &nbsp;{{$t('Block')}}
        
        //Close edit comment dialog
        md-button.md-raised(
            @click="closeEditDlg"
        )
            | {{$t('Cancel')}}
        
        //Save edit dialog
        md-button.md-raised.md-primary(
            @click="saveComment"
        )
            | {{$t('Save')}}